__snpeff__output = cfg.PROJECT + "/snpeff/%s.ann.vcf" % cfg.PROJECT

rule snpeff:
    input:
        vcf = __snpeff__input, 
    output:
        ann = __snpeff__output
    log:
        build_err = cfg.PROJECT + "/logs/snpeff/snpeff_build.err",
        build_out = cfg.PROJECT + "/logs/snpeff/snpeff_build.out",
        launch = cfg.PROJECT + "/logs/snpeff/snpeff_launch.err"
    params:
        genome = config["snpeff"]["reference"],
        options = config["snpeff"]["options"]
    run:
        from sequana import SnpEff

        mydata = SnpEff(reference=params.genome, 
            stdout=log.build_out, stderr=log.build_err)
        mydata.launch_snpeff(input.vcf, output.ann, log.launch, 
            options=params.options)
